@model IEnumerable<ejemplo_aspnet.Models.Product>
@{
    ViewBag.Title = "Comparador";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h2>COMPARADOR PRECIOS</h2>
    <p>Los productos son: @ViewBag.Message</p>
    <h3>
        @Html.ActionLink("Reiniciar Búsqueda", "Welcome", "Helloworld", new { @class = "btn btn-primary btn-sm" })
    </h3>

</div>
<table class="table table-bordered table-responsive table-hover">
    @foreach (var item in Model)
    {
                <tr> 
                    <td>
                        @switch (item.ID_Supermarket)
                         {
                                case 0: <h4>Carrefour</h4>
                                    break;
                                case 1: <h4>Mercadona</h4>
                                    break;
                                case 2: <h4>El Corte Ingles</h4>
                                    break;
                                case 3: <h4>Alcampo</h4>
                                    break;
                         }
                       
                        @if (item.Name == "ERROR")
                        {
                            <p style="color:red"> No hay resultados </p>
                        }
                        else
                        {
                            @Html.DisplayFor(modelItem => item.Name)
                            <h4> @Html.DisplayFor(modelItem => item.Price) € <a target="_blank" class="btn btn-info btn-sm" href="@Html.DisplayFor(modelItem => item.Link)">Ver en Web</a> </h4>
                        }

                    </td>
                </tr>
            }
</table>