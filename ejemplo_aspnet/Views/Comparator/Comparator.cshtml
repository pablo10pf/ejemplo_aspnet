@model IEnumerable<ejemplo_aspnet.Models.Product>
@{
    ViewBag.Title = "Comparador";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h2>COMPARADOR PRECIOS</h2>
    <h4>Productos a comparar: @ViewBag.Message</h4>
    <h3>
        @Html.ActionLink("Reiniciar Búsqueda", "Welcome", "Comparator", new { @class = "btn btn-primary btn-sm", @style = "font-size: 16px" })
    </h3>

</div>
<table class="table table-bordered table-responsive table-hover">
    @foreach (var item in Model)
    {
        <tr> 
            <td>
                <div class="container">
                    <div class="row">
                        <div class="col-lg-1" style="padding-right:100px">
                            @switch (item.ID_Supermarket)
                            {
                                case 0:<img src="https://www.carrefour.es/_includes/multimedia/es/btnFiltro1_tcm5-28159.png" width="70" height="50">
                                    break;
                                case 1: <img src="https://media.glassdoor.com/sqll/28359/mercadona-squarelogo.png" width="60" height="60">
                                    break;
                                case 2: <img src="https://cdn.grupoelcorteingles.es/statics/supermarket/assets/stylesheets/images/food/logos/supermarket-es-short.svg" width="100" height="70">
                                    break;
                                case 3: <img src="https://www.alcampo.es/compra-online/_ui/desktop/theme-alcampo/images/ux-pictogramas/logo-rojo.svg" width="100" height="40">
                                    break;
                            }
                        </div>
                        <div class="col-lg-8">
                            @if (item.Link == "ERROR")
                            {
                                <p style="color:red; padding-top:20px"> No hay resultados para: @item.Name</p>
                            }
                            else
                            {
                                @Html.DisplayFor(modelItem => item.Name)
                                <h4> <b> @Html.DisplayFor(modelItem => item.Price) € </b><a target="_blank" class="btn btn-info btn-sm" style="font-size: 14px; margin-left:2px" href="@Html.DisplayFor(modelItem => item.Link)">Ver en Web</a> </h4>
                            }
                        </div>
                    </div>
                </div>
            </td>
        </tr>
    }
</table>